        "label": "Button text",
        "placeholder": "Shop the Collection"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Link"
      },
      {
        "type": "image_picker",
        "id": "fallback_image",
        "label": "Fallback image",
        "info": "Your fallback image will display if the video fails to load."
      }
    ],
    "presets": [
      {
        "name": "Video",
        "category": "Video"
      }
    ]
  }
{% endschema %}
