<!-- /templates/blog.liquid -->
{% paginate blog.articles by 46 %}
{% comment %}
  This template is also used for listing out articles of a specific tag.
  You can change layouts or styles by checking if current_tags is true.
{% endcomment %}
<div class="custom-cocktail-filter-wrapper">
  <h1 class="custom-page-title">{{ blog.title }}</h1>
  <ul class="custom-cocktail-filter filter-button-group">
    <li class="active"><button class="js-filter" data-filter="*">All</button></li>
    <li><button class="js-filter" data-filter=".whisky">Whisky</button></li>
    <li><button class="js-filter" data-filter=".botanical-spirit">Botanical Spirit</button></li>
    <li><button class="js-filter" data-filter=".summer">Summer</button></li>
    <li><button class="js-filter" data-filter=".winter">Winter</button></li>
    {% comment %} 
      {% for article in blog.articles %}
          {%- if article.tags.size > 0 -%}
              {%- for tag in article.tags -%}
                <li>
                    <a class="js-filter" data-cocktail="{{ tag | handle }}">{{ tag }}</a>
                </li>
            {%- endfor -%}
          {%- endif -%}
      {% endfor %} 
    {% endcomment %}
  <ul>
</div>

<div class="parallax-container js-transparent-header-fadein js-after-primary-carousel">
	<div class="shopify-section" id="shopify-section-cocktail-grid-2">
    <div class="container-fluid">
      <div class="row custom-cocktails custom-cocktailz d-md-flex justify-content-start" >
        {% for article in blog.articles %}
          <!--index-grid-item-->
          <article class="rep col-12 col-sm-6 col-lg-3 js-filterable has-hover element-item  {%- if article.tags.size > 0 -%} {%- for tag in article.tags -%}{% unless forloop.first %} {% endunless %} {{ tag | handle }}{% unless forloop.last %} {% endunless %} {%- endfor -%} {%- endif -%}" data-grid-item="" data-cocktail="{%- if article.tags.size > 0 -%}{%- for tag in article.tags -%}{{ tag | handle }}{% unless forloop.last %} {% endunless %} {%- endfor -%}{%- endif -%}">
            <div class="index-grid-item-content">
              <div class="image-wrapper">
                {%- if article.image -%}
                  <img alt="" src="{{ article.image | img_url: 'master' }}" class="image-cover lazyload-fade lazyautosizes lazyloaded" data-srcset="{{ article.image | img_url: 'master' }}" srcset="{{ article.image | img_url: 'master' }}" data-parent-fit="cover" data-ratio="1.4996825396825397" data-sizes="auto" /><noscript class="image-cover"><img src="//cdn.shopify.com/s/files/1/0268/4089/1435/files/Ncnean_spritz_800x.jpg?v=1587992342"></noscript>
