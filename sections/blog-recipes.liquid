                {%- endif -%}
              </div>
              <span class="index-grid-item-overlay" data-hover-opacity="0.35" data-opacity="0" style="background-color: #000000; opacity: 0.2;"></span>
              <figcaption class="bottom left animation-sequence-0 can-animate">
                <h1 style="color: #ffffff"><span>{{ article.title }}</span></h1>
                <div class="index-grid-item-text" style="color: #ffffff">
                  <div>
                    
                      {% if article.excerpt.size > 0 %}
                        <p>{{ article.excerpt }}</p>
                      {%- endif -%}    
                    
                    {% comment %} {%- if article.tags.size > 0 -%}<p>{%- for tag in article.tags -%}{{ tag }}{% unless forloop.last %}, {% endunless %} {%- endfor -%}</p>{%- endif -%}      {% endcomment %}
                  </div>
                </div>
              </figcaption><a class="index-grid-item-link-overlay" href="{{ article.url }}"></a>
            </div>
          </article>
        {% endfor %}
      </div>
      <div class="row">
        <div class="col-12">
          {% if paginate.pages > 1 %}
            <hr>
            <div class="pagination">
              {{ paginate | default_pagination | replace: '&laquo; Previous', '&larr;' | replace: 'Next &raquo;', '&rarr;' }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
	</div>
</div>

{% endpaginate %}


{% schema %}
  {
    "name": "Recipes",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_blog_author",
        "default": false,
        "label": "Show author"
      }
    ]
  }
{% endschema %}

    
